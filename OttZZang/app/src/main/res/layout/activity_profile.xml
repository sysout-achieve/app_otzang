<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="117dp"
        app:srcCompat="@android:color/darker_gray" />

    <EditText
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView7"
        android:layout_below="@+id/imageView7"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/picture_btn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp"
        android:text="앨범" />

    <Button
        android:id="@+id/camera_btn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/picture_btn"
        android:layout_alignStart="@+id/picture_btn"
        android:layout_marginBottom="11dp"
        android:text="촬영" />

    <Button
        android:id="@+id/save_btn_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="저장하기" />

    <EditText
        android:id="@+id/person_weight"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/person_height"
        android:layout_below="@+id/person_height"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="몸무게"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/person_height"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_below="@+id/name"
        android:ems="10"
        android:hint="키"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/write_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/person_weight"
        android:layout_below="@+id/person_weight"
        android:layout_marginTop="14dp"
        android:text="내가 쓴 글" />

    <TextView
        android:id="@+id/shopping_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/write_num"
        android:layout_alignBottom="@+id/write_num"
        android:layout_marginEnd="27dp"
        android:layout_toStartOf="@+id/picture_btn"
        android:text="나의 쇼핑 일정" />

</android.widget.RelativeLayout>